{
  "name": "amazonq-standards",
  "description": "Organization-specific Amazon Q Developer CLI context rules and standards",
  "version": "0.1.0",
  "repository": {
    "url": "gitlab.example.com/org/amazonq-standards",
    "default_branch": "main"
  },
  "installation": {
    "context_dir": "$HOME/.boomslang",
    "profiles_dir": "$HOME/.aws/amazonq/profiles",
    "source_dir": "configs/.amazonq/profiles"
  },
  "organization": {
    "name": "Your Organization",
    "contact": "devtools@yourorg.com",
    "maintainer": "Platform Team"
  },
  "profiles": {
    "included": [
      "engineer-context.md",
      "reviewer-context.md", 
      "architect-context.md"
    ],
    "description": "Amazon Q Developer CLI profiles for different development roles and workflows"
  }
}